@model Bribery
@{ 
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>摇一摇抽红包</title>
    <link href="~/styles/mobile.css" rel="stylesheet" />
    <script src="~/scripts/jQuery-2.1.4.min.js"></script>
    <script src="~/scripts/jquery.signalr-2.0.3.js"></script>
    <script src="~/signalr/hubs"></script>
    <style>
        .btn {
            margin: 0 auto;
            display: block;
            width: 220px;
            height: 50px;
            border-radius: 50px;
            text-align: center;
            color: #fed639;
            font-size: 18px;
            line-height: 50px;
            position: absolute;
            left: 50%;
            bottom: 100px;
            text-decoration: none;
            background: #dc201f;
            margin-left: -110px;
        }
    </style>
</head>
<body style="background: #000">
    <img src="~/images/drawn-2.png" style="width: 100%" />
    <div id="price" style="position:absolute; width: 300px; left: 50%; margin-left: -150px; text-align: center; color: #c11515; font-size: 22px;">￥@((Model.Price / 100.0).ToString("0.00"))</div>
    <a asp-action="Index" asp-controller="WeChat" class="btn">再来一次</a>
    <script>
        $(document).ready(function () {
            $('#price').css('top', $(window).width() * 18.2 / 22.08);
            $('.btn').css('top', $(window).width() * 24.2 / 22.08);
        });

        $(window).resize(function () {
            $('#price').css('top', $(window).width() * 18.2 / 22.08);
            $('.btn').css('top', $(window).width() * 24.2 / 22.08);
        });
    </script>
</body>
</html>